CC = gcc
CXX = g++
CFLAGS =

HFILEDIRS = /opt/local/include
LIBDIRS = /opt/local/lib /usr/local/lib
OSLIBS = -lgc -Wl,-w -framework ApplicationServices -framework vecLib

ifeq ($(NBITS),32)
CONFIG = -DMACOSX -DARCH_X86 -DUSE_READLINE -DBOEHM_GC
endif
ifeq ($(NBITS),64)
CONFIG = -DMACOSX -DARCH_X86_64 -DBITS64 -DUSE_READLINE -DBOEHM_GC
endif
