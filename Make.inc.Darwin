CC = gcc
CXX = g++
CFLAGS =

GAMBIT = /usr/local/Gambit-C
GAMBITGSC = $(GAMBIT)/bin/gsc
GAMBITGSI = $(GAMBIT)/bin/gsi
GAMBITLIB = $(GAMBIT)/lib/libgambc.a
HFILEDIRS = $(GAMBIT)/include /opt/local/include
LIBDIRS = /opt/local/lib
OSLIBS = -framework ApplicationServices
EFENCE = /opt/local/lib/libefence.a

NBITS = 64
ifeq ($(NBITS),32)
CONFIG = -DMACOSX -DARCH_X86 -D__CPU__=586 -DUSE_READLINE
endif
ifeq ($(NBITS),64)
CONFIG = -DMACOSX -DARCH_X86_64 -D__CPU__=586 -DBITS64 -DUSE_READLINE
endif
